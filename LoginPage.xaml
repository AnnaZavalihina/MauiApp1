<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.LoginPage"
             Title="LoginPage">
    <StackLayout VerticalOptions="Center" Padding="20">
        <Entry x:Name="usernameEntry" Placeholder="Username" />

        <Grid>
            <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="{Binding IsPassword}" />
            <ImageButton Source="eye_icon.png"
                         VerticalOptions="Center"
                         HorizontalOptions="End"
                         BackgroundColor="Transparent"
                         Clicked="OnTogglePasswordVisibilityClicked" />
        </Grid>

        <Button x:Name="loginButton"
                Text="Login"
                BackgroundColor="#4CAF50"
                TextColor="White"
                Clicked="OnLoginClicked" />

        <Button x:Name="goToRegisterButton"
                Text="Go to Register"
                BackgroundColor="Transparent"
                TextColor="#4CAF50"
                Clicked="OnGoToRegisterClicked" />
    </StackLayout>
</ContentPage>