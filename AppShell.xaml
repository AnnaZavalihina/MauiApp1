<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiApp1">

    <ShellContent Title="Login" Route="login" ContentTemplate="{DataTemplate local:LoginPage}" />
    <ShellContent Title="Register" Route="register" ContentTemplate="{DataTemplate local:RegisterPage}" />
    <ShellContent Title="Home" Route="home" ContentTemplate="{DataTemplate local:HomePage}" />


</Shell>
